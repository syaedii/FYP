<%- include("partials/head"); -%>

  <!--custom style-->
  <link href="css/account.css" rel="stylesheet">

</head>

<!--body-->

<body class="start">

  <%- include("partials/nav"); -%>

  <main role="main">
    <div class="container">
      <!-- Code starts here-->
      <div class="row">
        <div class="col-12">

          <div class="slide-page justify-content-center shadow mb-5 rounded">
            <div class="mb-4">
              <p class="info-title mb-4">내 계정</p>
            </div>

            <form class="pt-2">
              <div class="row">

                <div class="col-md-6 pl-4 pr-5">
                  <div class="form-group row mb-4">
                    <label for="name" class="col-sm-3 col-form-label">성명</label>
                    <div class="col-sm-9">
                      <input type="text" class="form-control" id="name" placeholder="성명">
                    </div>
                  </div>

                  <div class="form-group row mb-4">
                    <label for="id" class="col-sm-3 col-form-label">아이디</label>
                    <div class="col-sm-9">
                      <input type="text" readonly class="form-control" id="id" placeholder="아이디">
                    </div>
                  </div>

                  <div class="form-group row mb-4">
                    <label for="email" class="col-sm-3 col-form-label">이메일</label>
                    <div class="col-sm-9">
                      <input type="email" readonly class="form-control" id="email" placeholder="이메일">
                    </div>
                  </div>

                  <div class="form-group row mb-4">
                    <label for="password" class="col-sm-3 col-form-label">비밀번호</label>
                    <div class="col-sm-9">
                      <input type="password" class="form-control" id="password" placeholder="비밀번호">
                    </div>
                  </div>

                  <div class="form-group row mb-4">
                    <label for="confirm_password" class="col-sm-3 col-form-label"></label>
                    <div class="col-sm-9">
                      <input type="password" class="form-control" id="confirm_password" placeholder="비밀번호 재입력">
                    </div>
                  </div>
                </div>


                <div class="col-md-6 pl-4 pr-5">
                  <div class="form-group row mb-4">
                    <label for="staticEmail" class="col-sm-3 col-form-label">학교</label>
                    <div class="col-sm-9">
                      <input type="text" class="form-control" id="staticEmail" placeholder="학교">
                    </div>
                  </div>

                  <div class="form-group row mb-4">
                    <label for="staticEmail" class="col-sm-3 col-form-label">연락처</label>
                    <div class="col-sm-9">
                      <input type="text" class="form-control" id="staticEmail" placeholder="연락처">
                    </div>
                  </div>

                  <div class="form-group row mb-4">
                    <label for="accType" class="col-sm-3 col-form-label">계정유형</label>
                    <div class="col-sm-2 d-flex flex-column m-2 pl-1">
                      <!--one of them should not be shown - display:none;-->
                      <span id="badge-instructor" class="badge-instructor badge badge-pill">감독</span>
                      <span id="badge-student" class="badge-student badge badge-pill">응시</span>
                    </div>
                  </div>
                </div>

              </div>
              <div class="row">
                <div class="col-md-12 pr-5">
                  <button type="submit" class="btn mb-4 col-sm-2 offset-sm-10">확인</button>
                </div>
              </div>
            </form>
          </div>

        </div>
      </div>

    </div>
  </main>

<%- include("partials/foot"); -%>
