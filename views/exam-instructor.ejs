<%- include("partials/head"); -%>

  <!--custom style-->
  <link href="css/exam.css" rel="stylesheet">

</head>

<!--body-->

<body class="" style="background-color: #EEEEEE">
  <main role="main">
    <div class="container-fluid">
      <!-- Code starts here-->
      <div class="row">
        <div class="col-10 d-flex flex-column-reverse pd-2">
          <div class="d-flex justify-content-around p-4">
            <button type="button" class="toggle-btn btn rounded-circle"><span class="material-icons">mic</span></button>
            <button type="button" class="toggle-btn btn rounded-circle"><span class="material-icons">videocam</span></button>
          </div>
          <div class="share-view">
            <!--share screen-->
          </div>
        </div>
        <div class="col-2 bg-light pt-2">
          <!-- button trigger modal -->
          <button type="button" id="end-btn" class="btn btn-block" data-toggle="modal" data-target="#end_exam">시험 종료</button>
          <!-- modal -->
          <div class="modal fade" id="end_exam" tabindex="-1" role="dialog">
            <div class="modal-dialog modal-dialog-centered" role="document">
              <div class="modal-content">
                <div class="modal-header">
                  <h5 class="modal-title col-12">시험을 종료하시겠습니까?</h5>
                </div>
                <div class="modal-body">
                    <button type="button" class="btn col-4" data-dismiss="modal">Cancel</button>
                    <button type="button" class="btn col-4 offset-1">Confirm</button>
                </div>
              </div>
            </div>
          </div>

          <div class="input-group mt-2 mb-2">
            <div class="input-group-prepend">
              <span class="input-group-text">
                <span class="material-icons">search</span>
            </div>
            <input type="text" class="form-control" placeholder="">
          </div>
          <div class="participant-list">
            <table class="table table-hover">
              <tbody>
                <tr>
                  <td>홍길동 (Me)</td>
                  <td><span class="badge-instructor badge badge-pill">감독</span></td>
                </tr>
                <tr>
                  <td>김길동 20xxxxxxx</td>
                  <td><span class="badge-student badge badge-pill">응시</span></td>
                </tr>
                <tr>
                  <td>강길동 20xxxxxxx</td>
                  <td><span class="badge-student badge badge-pill">응시</span></td>
                </tr>
                <tr>
                  <td>구길동 20xxxxxxx</td>
                  <td><span class="badge-student badge badge-pill">응시</span></td>
                </tr>
                <tr>
                  <td>나길동 20xxxxxxx</td>
                  <td><span class="badge-student badge badge-pill">응시</span></td>
                </tr>
              </tbody>
            </table>
          </div>
          <div class="cam-view" id="mycam">
              <!--instructor's camera-->
          </div>
        </div>
      </div>

    </div>
  </main>

  <!--footer-->

  <!-- jQuery -->
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>

  <!-- Bootstrap core JS -->
  <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>

  <!-- JavaScript Bundle with Popper -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-gtEjrD/SeCtmISkJkNUaaKMoLD0//ElJ19smozuHV6z3Iehds+3Ulb9Bn9Plx0x4" crossorigin="anonymous"></script>

</body>

</html>
